<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pract6RMP.MainPage"
             Title="Watch">
    <StackLayout>
        <TimePicker x:Name="tpTime" Format="HH mm ss" IsVisible="False"></TimePicker>
        <Frame Margin="0,280,0,0" HorizontalOptions="Center" BorderColor="White">
            <StackLayout>
                <Label x:Name="watchLabel" Text="00:00:00" HorizontalOptions="Center"></Label>
                
                <DatePicker WidthRequest="100" x:Name="dpDate" Format="dd MMMM yyyy "
                    DateSelected="dpDate_DateSelected"></DatePicker>

                <Button Text="Обновить" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>
